@model ShipManagement.Models.Dockworker

@{
    ViewData["Title"] = "حذف خنکار";
    Layout = "_BasicDataLayout";
}

<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            font-family: 'Vazir', Tahoma, Arial, sans-serif !important;
            direction: rtl !important;
        }

        .btn-secondary {
            background-color: #6b7280;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 500;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
        }

            .btn-secondary:hover {
                background-color: #4b5563;
                transform: translateY(-2px);
            }

        .btn-danger {
            background-color: #ef4444;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 500;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
        }

            .btn-danger:hover {
                background-color: #dc2626;
                transform: translateY(-2px);
            }
    </style>
</head>

<body class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4">
    <div class="max-w-4xl mx-auto">
        <!-- هدر صفحه -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8 border border-red-100">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800 flex items-center">
                        <i class="fas fa-trash-alt ml-3 text-red-500"></i>
                        حذف خنکار
                    </h1>
                    <p class="text-gray-600 mt-2">آیا از حذف این خنکار اطمینان دارید؟</p>
                </div>
                <div class="bg-red-100 p-4 rounded-full">
                    <i class="fas fa-hard-hat text-2xl text-red-600"></i>
                </div>
            </div>
        </div>

        <!-- کارت اطلاعات خنکار -->
        <div class="bg-white rounded-xl shadow-lg p-6 border border-red-100 mb-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-6 flex items-center">
                <i class="fas fa-info-circle ml-2 text-red-500"></i>
                اطلاعات خنکار جهت حذف
            </h2>

            <!-- هشدار -->
            <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
                <div class="flex items-center mb-4">
                    <i class="fas fa-exclamation-triangle text-red-500 text-2xl ml-3"></i>
                    <h3 class="text-lg font-semibold text-red-700">هشدار!</h3>
                </div>
                <p class="text-red-600">
                    این عمل قابل بازگشت نیست. پس از حذف، تمام اطلاعات مربوط به این خنکار از سیستم پاک خواهد شد.
                </p>
            </div>

            <!-- اطلاعات خنکار -->
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-id-card ml-2 text-blue-500"></i>
                        نام خنکار
                    </label>
                    <div class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-50">
                        @Model.Name
                    </div>
                </div>
            </div>
        </div>

        <!-- فرم حذف -->
        <form asp-action="DeleteDockworker" method="post" id="deleteForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <!-- دکمه‌های action -->
            <div class="flex items-center justify-end space-x-4 space-x-reverse">
                <a asp-action="Dockworkers" class="btn-secondary">
                    <i class="fas fa-arrow-right ml-2"></i>
                    بازگشت به لیست
                </a>
                <button type="submit" class="btn-danger">
                    <i class="fas fa-trash-alt ml-2"></i>
                    تایید حذف
                </button>
            </div>
        </form>
    </div>

    <script>
        $(document).ready(function () {
            // تایید نهایی قبل از حذف
            $('#deleteForm').on('submit', function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'آیا مطمئن هستید؟',
                    text: "این عمل قابل بازگشت نیست!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#ef4444',
                    cancelButtonColor: '#6b7280',
                    confirmButtonText: 'بله، حذف شود!',
                    cancelButtonText: 'لغو',
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        // اگر کاربر تایید کرد، فرم را ارسال کن
                        this.submit();
                    }
                });
            });
        });
    </script>
</body>
</html>