@model IEnumerable<ShipManagement.Models.CargoOwner>
@{
    ViewData["Title"] = "مدیریت صاحبان کالا";
    Layout = "_BasicDataLayout";
}

<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Vazir', Tahoma, Arial, sans-serif !important;
            direction: rtl !important;
        }

        .table-container {
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            border-radius: 0.75rem;
            overflow: hidden;
        }

        .action-btn {
            transition: all 0.2s ease-in-out;
        }

            .action-btn:hover {
                transform: scale(1.1);
            }
    </style>
</head>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4">
    <div class="max-w-6xl mx-auto">
        <!-- هدر صفحه -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8 border border-blue-100">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800 flex items-center">
                        <i class="fas fa-user-tie ml-3 text-blue-500"></i>
                        مدیریت صاحبان کالا
                    </h1>
                    <p class="text-gray-600 mt-2">لیست صاحبان کالای ثبت شده در سیستم</p>
                </div>
                <div class="flex space-x-2">
                    <a asp-action="CreateCargoOwner" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-3 rounded-lg font-medium transition duration-200 flex items-center">
                        <i class="fas fa-plus ml-2"></i>
                        افزودن صاحب کالای جدید
                    </a>
                    <div class="bg-blue-100 p-4 rounded-full">
                        <i class="fas fa-user-tie text-2xl text-blue-600"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- کارت جدول صاحبان کالا -->
        <div class="bg-white rounded-xl shadow-lg p-6 border border-blue-100">
            @if (!Model.Any())
            {
                <div class="text-center py-12">
                    <div class="bg-blue-50 rounded-full p-4 inline-flex mb-4">
                        <i class="fas fa-user-tie text-blue-500 text-3xl"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">هیچ صاحب کالایی ثبت نشده است</h3>
                    <p class="text-gray-500 mb-4">برای شروع، اولین صاحب کالا را به سیستم اضافه کنید.</p>
                    <a asp-action="CreateCargoOwner" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg inline-flex items-center">
                        <i class="fas fa-plus ml-2"></i>
                        افزودن صاحب کالای جدید
                    </a>
                </div>
            }
            else
            {
                <div class="overflow-x-auto table-container">
                    <table class="min-w-full bg-white">
                        <thead class="bg-blue-500 text-white">
                            <tr>
                                <th class="px-6 py-4 text-right text-sm font-semibold uppercase tracking-wider">
                                    <i class="fas fa-user ml-2"></i>
                                    نام صاحب کالا
                                </th>
                                <th class="px-6 py-4 text-right text-sm font-semibold uppercase tracking-wider">
                                    <i class="fas fa-phone ml-2"></i>
                                    تلفن
                                </th>
                                <th class="px-6 py-4 text-right text-sm font-semibold uppercase tracking-wider">
                                    <i class="fas fa-envelope ml-2"></i>
                                    ایمیل
                                </th>
                                <th class="px-6 py-4 text-right text-sm font-semibold uppercase tracking-wider">
                                    <i class="fas fa-cog ml-2"></i>
                                    عملیات
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                            @foreach (var item in Model)
                            {
                                <tr class="hover:bg-blue-50 transition duration-150">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="bg-blue-100 p-2 rounded-full">
                                                <i class="fas fa-user text-blue-600"></i>
                                            </div>
                                            <div class="mr-3">
                                                <div class="text-sm font-medium text-gray-900">@item.Name</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">@item.PhoneNumber</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">@item.Email</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <div class="flex space-x-2 justify-end">
                                            <a asp-action="EditCargoOwner" asp-route-id="@item.Id"
                                               class="text-blue-600 hover:text-blue-900 action-btn bg-blue-50 p-2 rounded-lg">
                                                <i class="fas fa-edit"></i>
                                                <span class="mr-1">ویرایش</span>
                                            </a>
                                            <a asp-action="DeleteCargoOwner" asp-route-id="@item.Id"
                                               class="text-red-600 hover:text-red-900 action-btn bg-red-50 p-2 rounded-lg">
                                                <i class="fas fa-trash"></i>
                                                <span class="mr-1">حذف</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <!-- کارت آمار -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
            <div class="bg-white rounded-xl shadow-lg p-6 border border-blue-100">
                <div class="flex items-center">
                    <div class="bg-blue-100 p-3 rounded-full">
                        <i class="fas fa-user-tie text-blue-600 text-xl"></i>
                    </div>
                    <div class="mr-3">
                        <p class="text-sm font-medium text-gray-600">تعداد کل صاحبان کالا</p>
                        <p class="text-2xl font-bold text-gray-900">@Model.Count()</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-lg p-6 border border-green-100">
                <div class="flex items-center">
                    <div class="bg-green-100 p-3 rounded-full">
                        <i class="fas fa-phone text-green-600 text-xl"></i>
                    </div>
                    <div class="mr-3">
                        <p class="text-sm font-medium text-gray-600">صاحبان کالا با تلفن</p>
                        <p class="text-2xl font-bold text-gray-900">
                            @{
                                var withPhone = Model.Count(c => !string.IsNullOrEmpty(c.PhoneNumber));
                                @withPhone
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-lg p-6 border border-purple-100">
                <div class="flex items-center">
                    <div class="bg-purple-100 p-3 rounded-full">
                        <i class="fas fa-envelope text-purple-600 text-xl"></i>
                    </div>
                    <div class="mr-3">
                        <p class="text-sm font-medium text-gray-600">صاحبان کالا با ایمیل</p>
                        <p class="text-2xl font-bold text-gray-900">
                            @{
                                var withEmail = Model.Count(c => !string.IsNullOrEmpty(c.Email));
                                @withEmail
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // افزودن effects برای تعامل بهتر
        $(document).ready(function() {
            // اضافه کردن effect hover به ردیف‌های جدول
            $('tr').hover(
                function() {
                    $(this).css('transform', 'translateX(-4px)');
                },
                function() {
                    $(this).css('transform', 'translateX(0)');
                }
            );
        });
    </script>
}