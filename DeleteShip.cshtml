@model ShipManagement.Models.Ship

@{
    ViewData["Title"] = "حذف کشتی";
    Layout = "_BasicDataLayout";
}

<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            font-family: 'Vazir', Tahoma, Arial, sans-serif !important;
            direction: rtl !important;
        }
    </style>
</head>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4">
    <div class="max-w-4xl mx-auto">
        <!-- هدر فرم -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8 border border-blue-100">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800 flex items-center">
                        <i class="fas fa-trash-alt ml-3 text-red-500"></i>
                        حذف کشتی
                    </h1>
                    <p class="text-gray-600 mt-2">آیا از حذف این کشتی اطمینان دارید؟</p>
                </div>
                <div class="bg-red-100 p-4 rounded-full">
                    <i class="fas fa-ship text-3xl text-red-600"></i>
                </div>
            </div>
        </div>

        <!-- کارت اطلاعات کشتی -->
        <div class="bg-white rounded-xl shadow-lg p-6 border border-red-100 mb-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-6 flex items-center">
                <i class="fas fa-info-circle ml-2 text-red-500"></i>
                اطلاعات کشتی جهت حذف
            </h2>

            <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
                <div class="flex items-center mb-4">
                    <i class="fas fa-exclamation-triangle text-red-500 text-2xl ml-3"></i>
                    <h3 class="text-lg font-semibold text-red-700">هشدار!</h3>
                </div>
                <p class="text-red-600">
                    این عمل قابل بازگشت نیست. پس از حذف، تمام اطلاعات مربوط به این کشتی از سیستم پاک خواهد شد.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- فیلد نام کشتی -->
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-700 flex items-center">
                        <i class="fas fa-flag ml-2 text-blue-400"></i>
                        نام کشتی
                    </label>
                    <div class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-50">
                        @Model.Name
                    </div>
                </div>

                <!-- فیلد کشور -->
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-700 flex items-center">
                        <i class="fas fa-globe ml-2 text-blue-400"></i>
                        کشور
                    </label>
                    <div class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-50">
                        @(Model.Country ?? "-")
                    </div>
                </div>

                <!-- فیلد ظرفیت -->
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-700 flex items-center">
                        <i class="fas fa-weight-hanging ml-2 text-blue-400"></i>
                        ظرفیت (تن)
                    </label>
                    <div class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-50">
                        @(Model.Capacity?.ToString("N0") ?? "-")
                    </div>
                </div>

                <!-- فیلد سال ساخت -->
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-700 flex items-center">
                        <i class="fas fa-calendar ml-2 text-blue-400"></i>
                        سال ساخت
                    </label>
                    <div class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-50">
                        @(Model.BuildYear?.ToString() ?? "-")
                    </div>
                </div>
            </div>
        </div>

        <!-- فرم حذف -->
        <form asp-action="DeleteShip" method="post" id="deleteForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <!-- دکمه‌های action -->
            <div class="flex justify-between mt-8">
                <a asp-action="Ships" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 flex items-center">
                    <i class="fas fa-arrow-right ml-2"></i>
                    بازگشت به لیست
                </a>
                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 flex items-center">
                    <i class="fas fa-trash-alt ml-2"></i>
                    تایید حذف
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // تایید نهایی قبل از حذف
            $('#deleteForm').on('submit', function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'آیا مطمئن هستید؟',
                    text: "این عمل قابل بازگشت نیست!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'بله، حذف شود!',
                    cancelButtonText: 'لغو',
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        // اگر کاربر تایید کرد، فرم را ارسال کن
                        this.submit();
                    }
                });
            });
        });
    </script>
}