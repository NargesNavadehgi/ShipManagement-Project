@model ShipManagement.Models.CargoOwner

@{
    ViewData["Title"] = "ویرایش صاحب کالا";
    Layout = "_BasicDataLayout";
}

<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Vazir', Tahoma, Arial, sans-serif !important;
            direction: rtl !important;
        }
    </style>
</head>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4">
    <div class="max-w-4xl mx-auto">
        <!-- هدر فرم -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8 border border-blue-100">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800 flex items-center">
                        <i class="fas fa-edit ml-3 text-blue-500"></i>
                        ویرایش صاحب کالا
                    </h1>
                    <p class="text-gray-600 mt-2">فرم زیر را برای ویرایش اطلاعات صاحب کالا تکمیل کنید</p>
                </div>
                <div class="bg-blue-100 p-4 rounded-full">
                    <i class="fas fa-user-tie text-3xl text-blue-600"></i>
                </div>
            </div>
        </div>

        <!-- فرم اصلی -->
        <form asp-action="EditCargoOwner" method="post" id="cargoOwnerForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-700 p-4 rounded-lg mb-6"></div>

            <!-- کارت اطلاعات صاحب کالا -->
            <div class="bg-white rounded-xl shadow-lg p-6 border border-blue-100 mb-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-6 flex items-center">
                    <i class="fas fa-info-circle ml-2 text-blue-500"></i>
                    اطلاعات صاحب کالا
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- فیلد نام صاحب کالا -->
                    <div class="space-y-2">
                        <label asp-for="Name" class="block text-sm font-medium text-gray-700 flex items-center">
                            <i class="fas fa-user ml-2 text-blue-400"></i>
                            نام صاحب کالا *
                        </label>
                        <input asp-for="Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" placeholder="نام صاحب کالا را وارد کنید" />
                        <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
                    </div>

                    <!-- فیلد شماره تماس -->
                    <div class="space-y-2">
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 flex items-center">
                            <i class="fas fa-phone ml-2 text-blue-400"></i>
                            شماره تماس
                        </label>
                        <input asp-for="PhoneNumber" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" placeholder="شماره تماس را وارد کنید" />
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-xs"></span>
                    </div>

                    <!-- فیلد ایمیل -->
                    <div class="space-y-2">
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 flex items-center">
                            <i class="fas fa-envelope ml-2 text-blue-400"></i>
                            آدرس ایمیل
                        </label>
                        <input asp-for="Email" type="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" placeholder="ایمیل را وارد کنید" />
                        <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                    </div>

                    <!-- فیلد آدرس -->
                    <div class="space-y-2 md:col-span-2">
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700 flex items-center">
                            <i class="fas fa-map-marker-alt ml-2 text-blue-400"></i>
                            آدرس
                        </label>
                        <textarea asp-for="Address" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" placeholder="آدرس کامل را وارد کنید"></textarea>
                        <span asp-validation-for="Address" class="text-red-500 text-xs"></span>
                    </div>
                </div>
            </div>

            <!-- دکمه‌های action -->
            <div class="flex justify-between mt-8">
                <a asp-action="CargoOwners" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 flex items-center">
                    <i class="fas fa-arrow-right ml-2"></i>
                    بازگشت به لیست
                </a>
                <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 flex items-center">
                    <i class="fas fa-save ml-2"></i>
                    ذخیره تغییرات
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // کدهای JavaScript اینجا
        $(document).ready(function () {
            // اعتبارسنجی client-side
            $('#cargoOwnerForm').on('submit', function (e) {
                let isValid = true;

                // بررسی نام صاحب کالا
                const ownerName = $('#Name').val().trim();
                if (!ownerName) {
                    isValid = false;
                    $('#Name').addClass('border-red-500');
                } else {
                    $('#Name').removeClass('border-red-500');
                }

                // بررسی ایمیل
                const email = $('#Email').val().trim();
                if (email && !isValidEmail(email)) {
                    isValid = false;
                    $('#Email').addClass('border-red-500');
                    alert('فرمت ایمیل نامعتبر است.');
                } else {
                    $('#Email').removeClass('border-red-500');
                }

                if (!isValid) {
                    e.preventDefault();
                }
            });

            // تابع بررسی صحت ایمیل
            function isValidEmail(email) {
                const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                return emailRegex.test(email);
            }

            // پاک کردن خطاها هنگام تایپ
            $('input, textarea').on('input', function() {
                $(this).removeClass('border-red-500');

                // اعتبارسنجی لحظه‌ای برای ایمیل
                if ($(this).attr('id') === 'Email') {
                    const email = $(this).val().trim();
                    if (email && !isValidEmail(email)) {
                        $(this).addClass('border-red-500');
                    } else {
                        $(this).removeClass('border-red-500');
                    }
                }
            });
        });
    </script>
}