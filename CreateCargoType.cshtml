@model ShipManagement.Models.CargoType
@{
    Layout = "_BasicDataLayout";
    ViewData["Title"] = "افزودن نوع کالا";
}

<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Vazir', Tahoma, Arial, sans-serif !important;
            direction: rtl !important;
        }
    </style>
</head>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4">
    <div class="max-w-4xl mx-auto">
        <!-- هدر فرم -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8 border border-blue-100">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800 flex items-center">
                        <i class="fas fa-plus-circle ml-3 text-blue-500"></i>
                        افزودن نوع کالا جدید
                    </h1>
                    <p class="text-gray-600 mt-2">فرم زیر را برای ثبت نوع کالای جدید تکمیل کنید</p>
                </div>
                <div class="bg-blue-100 p-4 rounded-full">
                    <i class="fas fa-box text-3xl text-blue-600"></i>
                </div>
            </div>
        </div>

        <!-- فرم اصلی -->
        <form asp-action="CreateCargoType" method="post" id="cargoTypeForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-700 p-4 rounded-lg mb-6"></div>

            <!-- کارت اطلاعات نوع کالا -->
            <div class="bg-white rounded-xl shadow-lg p-6 border border-blue-100 mb-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-6 flex items-center">
                    <i class="fas fa-info-circle ml-2 text-blue-500"></i>
                    اطلاعات نوع کالا
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- فیلد نام نوع کالا -->
                    <div class="space-y-2">
                        <label asp-for="Name" class="block text-sm font-medium text-gray-700 flex items-center">
                            <i class="fas fa-signature ml-2 text-blue-400"></i>
                            نام نوع کالا *
                        </label>
                        <input asp-for="Name" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" placeholder="مثال: گندم، سیمان، فولاد" />
                        <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
                    </div>

                    <!-- فیلد واحد اندازه‌گیری -->
                    <div class="space-y-2">
                        <label asp-for="Unit" class="block text-sm font-medium text-gray-700 flex items-center">
                            <i class="fas fa-weight ml-2 text-blue-400"></i>
                            واحد اندازه‌گیری
                        </label>
                        <select asp-for="Unit" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm">
                            <option value="">انتخاب واحد</option>
                            <option value="ton">تن</option>
                            <option value="kg">کیلوگرم</option>
                            <option value="box">جعبه</option>
                            <option value="package">بسته</option>
                        </select>
                    </div>

                    <!-- فیلد حداکثر وزن مجاز -->
                    <div class="space-y-2">
                        <label asp-for="MaxWeight" class="block text-sm font-medium text-gray-700 flex items-center">
                            <i class="fas fa-weight-hanging ml-2 text-blue-400"></i>
                            حداکثر وزن مجاز (کیلوگرم)
                        </label>
                        <input asp-for="MaxWeight" type="number" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" placeholder="مثال: 1000" />
                    </div>
                </div>

                <!-- فیلد توضیحات -->
                <div class="space-y-2 mt-6">
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700 flex items-center">
                        <i class="fas fa-align-left ml-2 text-blue-400"></i>
                        توضیحات
                    </label>
                    <textarea asp-for="Description" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" placeholder="توضیحات مربوط به این نوع کالا را وارد کنید"></textarea>
                </div>
            </div>

            <!-- دکمه‌های action -->
            <div class="flex justify-between mt-8">
                <a asp-action="CargoTypes" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 flex items-center">
                    <i class="fas fa-arrow-right ml-2"></i>
                    بازگشت به لیست
                </a>
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 flex items-center">
                    <i class="fas fa-save ml-2"></i>
                    ثبت نوع کالا
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // اعتبارسنجی client-side
            $('#cargoTypeForm').on('submit', function (e) {
                let isValid = true;

                // بررسی نام
                const name = $('#Name').val().trim();
                if (!name) {
                    isValid = false;
                    $('#Name').addClass('border-red-500');
                } else {
                    $('#Name').removeClass('border-red-500');
                }

                if (!isValid) {
                    e.preventDefault();
                    alert('لطفاً اطلاعات ضروری (نام نوع کالا) را وارد کنید.');
                }
            });

            // پاک کردن خطاها هنگام تایپ
            $('input, textarea, select').on('input', function() {
                $(this).removeClass('border-red-500');
            });
        });
    </script>
}